@article{Rom15,
  author={M. Romanelli and V. Parail and P. da Silva Aresta Belo and G. Corrigan and L. Garzotti and D. Harting and F. Koechl and E.
Militello-Asp and R. Ambrosino and M. Cavinato and A. Kukushkin and A. Loarte and M. Mattei and R. Sartori},
