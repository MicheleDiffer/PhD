@article{Cas13,
  author={F.J. Casson and R.M. McDermott and C. Angioni and Y. Camenen and R. Dux and E. Fable and R. Fischer and B. Geiger and P. Manas and L.
Menchero and G. Tardini and the ASDEX Upgrade Team},
  title={Validation of gyrokinetic modelling of light impurity transport including rotation in ASDEX Upgrade},
